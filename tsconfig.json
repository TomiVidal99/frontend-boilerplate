{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "typings/browser.d.ts", "typings/browser"],
  "include": ["src"]
}
